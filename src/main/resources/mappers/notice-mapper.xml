	<!-- WHERE 태그 -->

<select id="searchList" parameterType="nSearch" resultMap="noticeResultSet">
	SELECT * FROM NOTICE
	<where>
		<choose>
			<when test="searchCondition == 'title'">
				NTITLE LIKE '%' || #{searchValue } ||  '%'
			</when>
			<when test="searchCondition == 'writer'">
				AND NWRITER LIKE '%' || #{searchValue } || '%'
			</when>
			<when test="searchCondition == 'content'">
				AND NCONTENT LIKE '%' || #{searchValue } || '%'
			</when>
			<otherwise>
				 AND (NWRITER LIKE '%' || #{searchValue } || '%'
				OR NTITLE LIKE '%' || #{searchValue } ||  '%'
				OR NCONTENT LIKE '%' || #{searchValue } || '%')
			</otherwise>
		</choose>	
	</where>
	ORDER BY N_CREATE_DATE DESC
</select>


<!-- 공지사항 등록 쿼리 -->
<insert id="insertNotice" parameterType="Notice">
	INSERT INTO NOTICE(NID, NTITLE, NWRITER, NCONTENT, N_CREATE_DATE, N_MODIFY_DATE, M_STATUS, CATEGORY, PRGRESS)
	VALUES(SEQ_NID.NEXTVAL, #{nTitle}, #{nWriter}, #{nContent}, SYSDATE, SYSDATE, DEFAULT, #{nCategory}, DEFAULT)
</insert>


<!-- 공지사항 수정 쿼리 -->
<update id="updateNotice" parameterType="Notice">
	UPDATE NOTICE
	SET NTITLE = #{nTitle}, NCONTENT = #{nContent},
	 N_MODIFY_DATE = SYSDATE,CATEGORY = #{nCategory},
	 PRGRESS= #{prgress}
	WHERE NID = #{nId}
</update>


<!-- 공지사항 삭제 쿼리 -->
	<delete id="deleteNotice" parameterType="_int">
		DELETE FROM NOTICE
		WHERE NID=#{nId}
	
	</delete>
<select id="getListCount" resultType="_int">
		SELECT COUNT(*)
		FROM NOTICE
		WHERE M_STATUS='Y'
	</select>
	
	
</mapper>










